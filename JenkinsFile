pipeline {
    agent any
    stages {
        stage('Checkout SCM') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/adjune9811/SimpleRG-Jenkins-yaml.git']]
                ])
            }
        }
        stage('Initialize') {
            steps {
                script {
                    withCredentials([azureServicePrincipal('7d821747-f160-4c25-8bea-97340f53c371')]) {
                        sh 'az login --service-principal -u $AZURE_CLIENT_ID -p $AZURE_CLIENT_SECRET --tenant $AZURE_TENANT_ID'
                        sh 'az account set --subscription $AZURE_SUBSCRIPTION_ID'
                    }
                }
                dir('path_to_your_terraform_directory') {
                    sh 'terraform init'
                }
            }
        }
        stage('Validate') {
            steps {
                dir('path_to_your_terraform_directory') {
                    sh 'terraform validate'
                }
            }
        }
        stage('Format') {
            steps {
                dir('path_to_your_terraform_directory') {
                    sh 'terraform fmt -check=true'
                }
            }
        }
        stage('Plan') {
            steps {
                dir('path_to_your_terraform_directory') {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }
        stage('Apply') {
            when {
                expression {
                    return currentBuild.result == null || currentBuild.result == 'SUCCESS'
                }
            }
            steps {
                dir('path_to_your_terraform_directory') {
                    sh 'terraform apply -input=false tfplan'
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline execution completed.'
        }
        failure {
            echo 'Pipeline execution failed.'
        }
    }
}
