pipeline {
    agent any
    
    environment {
        AZURE_CREDENTIALS = credentials('IAC_AZURE_SECRET')
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Terraform Init') {
            steps {
                script {
                    def tfHome = tool name: 'Terraform', type: 'hudson.plugins.terraform.TerraformTool'
                    env.PATH = "${tfHome}:${env.PATH}"
                    
                    sh 'terraform init -backend-config="backend.tfvars"'
                }
            }
        }
        
        stage('Terraform Plan') {
            steps {
                script {
                    sh 'terraform plan -var-file="variables.tfvars" -out=tfplan'
                }
            }
        }
        
        stage('Terraform Apply') {
            steps {
                script {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }
    }
}
